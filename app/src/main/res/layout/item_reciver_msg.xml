<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:visibility="gone"
        android:id="@+id/idReplyContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/idReplyOne"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oh"
            android:textColor="#ff0000" />

        <TextView
            android:id="@+id/idReplyTwo"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="❤"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <ImageView
        android:layout_below="@+id/idReplyContainer"
        android:id="@+id/idIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:src="@drawable/ic_user" />

    <TextView
        android:layout_below="@+id/idReplyContainer"
        android:id="@+id/idMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/idIcon"
        android:background="@drawable/bg_receiver_msg"
        android:padding="10sp"
        android:text="fafasf "
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="normal" />


    <TextView
        android:gravity="center"
        android:background="@drawable/bg_reply"
        android:layout_marginLeft="-20dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="-10dp"
        android:layout_toRightOf="@+id/idMessage"
        android:text="ff"
        android:visibility="visible"
        android:layout_below="@+id/idMessage"
        android:id="@+id/idReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent" />
</RelativeLayout>